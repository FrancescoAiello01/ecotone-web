<% provide(:title, "All Users") %>
<h1>All Users</h1>

<ul class="users">
  <% @users.each do |user| %>
    <li>
      <%= link_to user.name, user %>
      <% if user.admin? %>
        - Administrator
      <% end %>
      <% if current_user.admin? && !current_user?(user) %>
        | <%= link_to "delete", user, method: :delete, data: { confirm: "Delete #{user.name}?" } %>
      <% end %>
    </li>
  <% end %>
</ul>