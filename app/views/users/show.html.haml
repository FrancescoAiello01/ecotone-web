- provide(:title, @user.name)
.row
  %aside.col-md-6
    %section.user-info
      %h1= @user.name
      %h2= @user.email
      %br
      %h3= "#{@user.name}'s Biodiversity Reports" 
      %hr
      %ul.index
        - @user.biodiversity_reports.each do |report|
          %li.user_list
            .col-md-8
              %h2= link_to "Biodiversity Report - #{report.date.strftime("%B %d, %Y")}", report


      - if admin?(current_user) || current_user?(@user)
        = link_to "Edit", edit_user_path(params[:id]), class: "btn btn-primary edit-btn"