- provide(:title, "All Plants")
%h1 All Plants
%ul.indexing
  - @plants.each do |plant|
    %li
      = link_to plant.common_name, plant
      | #{link_to "delete", plant, method: :delete, data: { confirm: "Delete #{plant.common_name}?" }}

= link_to new_plant_path, class: 'add_plant' do
  = image_tag "add.svg", size: "12x12"
  Add Plant
