.plant_sample_fields
  %fieldset.plant_sample
    %p= link_to 'Omit plant sample', '#', class: 'remove_fields'
    = f.hidden_field :_destroy
    = f.label :plant_id
    = f.collection_select :plant_id, @plants, :id, :common_name, include_blank: 'Choose one'
    = f.label :abundance
    = f.text_field :abundance, class: 'form-control'
    = f.label :percent_cover
    = f.text_field :percent_cover, class: 'form-control'
    = f.label :photo
    = f.file_field :photo, class: 'form-control'
    %hr
