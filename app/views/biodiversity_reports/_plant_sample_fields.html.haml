%fieldset.plant_sample
  = f.label :plant_id
  = f.collection_select :plant_id, @plants.order('LOWER(common_name) ASC'), :id, :common_name, include_blank: 'Choose one'
  = f.label :abundance
  = f.text_field :abundance, class: 'form-control'
  = f.label :percent_cover
  = f.text_field :percent_cover, class: 'form-control'
  = f.label :photo
  = f.file_field :photo, class: 'form-control'
  = f.hidden_field :_destroy
  %p= link_to 'Remove plant sample', '#', class: 'remove_fields'
  %hr