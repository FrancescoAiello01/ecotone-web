- provide(:title, 'New Biodiversity Report')
%h1 New Biodiversity Report
.row
  .col-md-6.col-md-offset-3
    = form_for(@biodiversity_report, html: {multipart: true}) do |form|
      = render partial: 'shared/error_messages', locals: { object: @biodiversity_report }
      = form.label :date
      = form.date_field :date, class: 'form-control'
      = form.label :time
      = form.time_field :time, class: 'form-control'
      = form.label :temperature
      = form.text_field :temperature, class: 'form-control'
      = form.label :biomass_estimate
      = form.text_field :biomass_estimate, class: 'form-control'
      = form.label :species_richness
      = form.text_field :species_richness, class: 'form-control'
      = form.label :photo
      = form.file_field :photo, class: 'form-control'

      %h3= form.label :soil_sample
      %hr
      = form.label :plot
      = form.collection_select :plot, @plots, :id, :plot_id, :include_blank => "Choose one"
      = form.fields_for :plot do |soil_sample_fields|
        = soil_sample_fields.label :ph_level
        = soil_sample_fields.text_field :ph_level
        = soil_sample_fields.label :temperature, 'Soil Temperature'
        = soil_sample_fields.text_field :temperature

      = form.submit "Add biodiversity report", class: "btn btn-primary"