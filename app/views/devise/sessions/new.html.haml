- content_for_title('Log In')
.row
  .col-md-6.col-md-offset-3
    = form_for(resource, as: resource_name, url: session_path(resource_name)) do |form|
      = form.label :email
      = form.email_field :email, class: 'form-control'
      = form.label :password
      = link_to '(forgot password?)', new_password_reset_path, title: 'Reset your password'
      = form.password_field :password, class: 'form-control'
      = form.submit 'Log in', class: 'btn btn-primary', id: 'login-btn'
    %p
      New user? #{ link_to 'Sign up', new_user_registration_path, title: 'Create an Ecotone account' }
